# Example environment variables for mnemIA
# Copy this file to .env and fill values.

# MongoDB connection (used by etl_mongodb_joconde.py)
MONGO_URI=mongodb://username:password@host:port
MONGO_DB=mnemia

# API / server
PORT=8000
DEBUG=true

# SQLite DB path
DB_PATH=mnemia.db

# API token for authentication
API_TOKEN=CHANGE_ME_TOKEN

# Any other secrets or config
# e.g. API keys for Datamuse if needed
# DATAMUSE_KEY=
